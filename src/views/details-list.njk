{% extends "_base.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}

{% block content %}
  <h1 class="govuk-heading-xl">
    Details of non target species
  </h1>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form method="post">
        {{ govukButton({
              text: "Add",
              value: "add",
              name: "add",
              classes: "naturescot-forward-button add"
            }) }}
        {{ govukButton({
              text: "Edit",
              value: "edit",
              name: "edit",
              classes: "naturescot-forward-button edit"
            }) }}
        {{ govukButton({
              text: "Continue",
              classes: "naturescot-forward-button continue"
            }) }}
      </form>
    </div>
  </div>

{% endblock %}